<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="triangle" class="com.gaurav.springmvc.Triangle">
		<property name="pointA" ref="pointA" />
		<property name="pointB" ref="pointB" />
		<property name="pointC" ref="pointC" />
	</bean>

	<bean id="pointA" class="com.gaurav.springmvc.Point">
		<property name="x" value="${pointA.pointX}" />
		<property name="y" value="${pointA.pointY}" />
	</bean>

	<bean id="pointB" class="com.gaurav.springmvc.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointC" class="com.gaurav.springmvc.Point">
		<property name="x" value="0" />
		<property name="y" value="20" />
	</bean>

	<!-- <bean class="com.gaurav.springmvc.DisplayNameBeanPostProcessor" /> -->

	<!-- <bean class="com.gaurav.springmvc.MyBeanFactoryPostProcessor"></bean> -->
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="pointsconfig.properties" />
	</bean>
	
	<bean id="circle" class="com.gaurav.springmvc.Circle">
		<!-- <property name="center" ref="pointA" /> -->
	</bean>
	
	<bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor" />
	
</beans>