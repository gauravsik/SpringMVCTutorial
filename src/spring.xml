<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<!-- Autowiring -->
<beans>

	<bean id="parentTriangle" class="com.gaurav.springmvc.Triangle">
		<property name="pointA" ref="pointA" />
	</bean>
	
	<bean id="triangle1" class="com.gaurav.springmvc.Triangle" parent="parentTriangle">
		<property name="pointB" ref="pointB" />
		<property name="pointC" ref="pointC" />
	</bean>
	
	<bean id="triangle2" class="com.gaurav.springmvc.Triangle" parent="parentTriangle">
		<property name="pointB" ref="pointA" />
	</bean>

	<bean id="pointA" class="com.gaurav.springmvc.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointB" class="com.gaurav.springmvc.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>

	<bean id="pointC" class="com.gaurav.springmvc.Point">
		<property name="x" value="0" />
		<property name="y" value="20" />
	</bean>

</beans>