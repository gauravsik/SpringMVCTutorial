<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="triangle" class="com.gaurav.springmvc.Triangle">
		<property name="pointA" ref="firstPoint" />
		<property name="pointB" ref="secondPoint" />
		<property name="pointC" ref="thirdPoint" />
	</bean>

	<bean id="firstPoint" class="com.gaurav.springmvc.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="secondPoint" class="com.gaurav.springmvc.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>

	<bean id="thirdPoint" class="com.gaurav.springmvc.Point">
		<property name="x" value="0" />
		<property name="y" value="20" />
	</bean>

</beans>